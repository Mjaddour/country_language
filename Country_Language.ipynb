    "def play_last_message(history):\n",
    "    # Fetch and play the last assistant response\n",
    "    if history:\n",
    "        last_message = history[-1]  # Get the last entry in history\n",
    "        if last_message[\"role\"] == \"assistant\":\n",
    "            talker(last_message[\"content\"]) "
   ]
